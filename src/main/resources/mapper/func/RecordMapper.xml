<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kalvin.kvf.modules.func.mapper.RecordMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.kalvin.kvf.modules.func.entity.Record">
        <id column="id" property="id" />
        <result column="userid" property="userid" />
        <result column="realname" property="realname" />
        <result column="level" property="level" />
        <result column="create_time" property="createTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
       id, userid, realname, level, create_time
    </sql>

    <select id="selectRecordList" resultType="com.kalvin.kvf.modules.func.entity.Record">
        select <include refid="Base_Column_List" /> from func_record
        <trim prefix="where" prefixOverrides="and">
            <if test="record.userid != null and record.userid != ''">
                and userid like concat(#{record.userid}, "%")
            </if>
            <if test="record.realname != null and record.realname != ''">
                and realname like concat(#{record.realname}, "%")
            </if>
            <if test="record.level != null">
                and level = #{record.level}
            </if>
            <if test="record.createTime != null">
                and create_time = #{record.createTime}
            </if>
        </trim>
    </select>

</mapper>
